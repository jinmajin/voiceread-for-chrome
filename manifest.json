{
  "manifest_version": 2,

  "name": "VoiceRead",
  "description": "This extension makes reading on Chrome easy and audible",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
      "js": ["highlight.js"]
    }
  ], 
  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "tabs"
  ]
}
