{
  "manifest_version": 2,

  "name": "VoiceRead",
  "description": "This extension makes reading on Chrome easy and audible",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
        "matches": ["<all_urls>"],
      "js": [
        "js/jquery.min.js",
        "js/highlight.js"
      ]
    }
  ], 
  "background" : {
      "scripts": ["js/background.js"]
    },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "storage",
    "tts",
    "fontSettings"
  ]
}
